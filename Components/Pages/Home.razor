@page "/"
@* Daniel added this injection so we can use everwhere in project the PersonService Object *@
@using BlazorAppDataBinding2
@inject PersonService PersonService
@inject NavigationManager Navigation

<h3>Person Form</h3>

<EditForm Model="@PersonService.Person" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="firstName">First Name</label>
        <InputText id="firstName" class="form-control" @bind-Value="PersonService.Person.FirstName" />
    </div>

    <div class="form-group">
        <label for="lastName">Last Name</label>
        <InputText id="lastName" class="form-control" @bind-Value="PersonService.Person.LastName" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {

    private void HandleSubmit()
    {
        // Navigate to the success page after form submission
        Navigation.NavigateTo("/success");
    }
}

